<form id="signin" method="<?php echo $this->element->getMethod(); ?>" action="<?php echo $this->element->getAction(); ?>">
	<?php if (count($this->element->email->getMessages()) > 0): ?>
	<p class="error"><?php echo ltrim(implode('. ', $this->element->email->getMessages()) . '.', '.'); ?>
	<?php endif;?>
	<p>
		<label for="email">E-mail:</label>
		<input type="email" id="email" name="<?php echo $this->element->email->getName(); ?>">
	</p>
	<?php if (count($this->element->password->getMessages()) > 0): ?>
	<p class="error"><?php echo ltrim(implode('. ', $this->element->password->getMessages()) . '.', '.'); ?>
	<?php endif;?>
	<p>
		<label for="password">Hasło:</label>
		<input type="password" id="password" name="<?php echo $this->element->password->getName(); ?>">
	</p>
	<p>
		<button class="button" type="submit">Zaloguj się</button>
	</p>
</form>
